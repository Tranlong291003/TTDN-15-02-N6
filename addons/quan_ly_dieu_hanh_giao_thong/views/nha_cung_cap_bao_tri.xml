<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_nha_cung_cap_bao_tri_form" model="ir.ui.view">
        <field name="name">nha_cung_cap_bao_tri.form</field>
        <field name="model">nha_cung_cap_bao_tri</field>
        <field name="arch" type="xml">
            <form string="Nhà Cung Cấp Dịch Vụ Bảo Trì">
                <sheet>
                    <group>
                        <group>
                            <field name="supplier_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="contact_person"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_nha_cung_cap_bao_tri_tree" model="ir.ui.view">
        <field name="name">nha_cung_cap_bao_tri.tree</field>
        <field name="model">nha_cung_cap_bao_tri</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Nhà Cung Cấp">
                <field name="supplier_id"/>
                <field name="name"/>
                <field name="contact_person"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_nha_cung_cap_bao_tri" model="ir.actions.act_window">
        <field name="name">Nhà Cung Cấp Bảo Trì</field>
        <field name="res_model">nha_cung_cap_bao_tri</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
